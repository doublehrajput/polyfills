{
  "compilerOptions": {
    "jsx": "react",
    "strictFunctionTypes": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"]
    },
    "moduleResolution": "node",
    "module": "ES6",
    "target": "ES6",
    "lib": ["DOM", "ES5"]
  },
  "exclude": ["./node_modules", "./build", "./public"],
  "include": ["./src/**/*", "./__tests__/**/*"]
}
